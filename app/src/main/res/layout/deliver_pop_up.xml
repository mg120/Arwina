<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginBottom="30dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/deliver_imageV_id"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/close_imageV_id"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/deliver_image_progress_id"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="@dimen/activity_margin"
            android:layout_height="@dimen/activity_margin"
            android:theme="@style/CircularProgress"
            app:layout_constraintBottom_toBottomOf="@id/deliver_imageV_id"
            app:layout_constraintEnd_toEndOf="@id/deliver_imageV_id"
            app:layout_constraintStart_toStartOf="@id/deliver_imageV_id"
            app:layout_constraintTop_toTopOf="@id/deliver_imageV_id" />

        <RatingBar
            android:id="@+id/deliver_ratingBar_id"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:rating="4"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/deliver_name_txtV_id"
            app:layout_constraintTop_toBottomOf="@id/deliver_name_txtV_id" />

        <TextView
            android:id="@+id/deliver_phone_txtV_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/deliver_name_txtV_id"
            app:layout_constraintEnd_toEndOf="@id/deliver_name_txtV_id"
            app:layout_constraintTop_toBottomOf="@id/deliver_name_txtV_id" />

        <TextView
            android:id="@+id/deliver_name_txtV_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:maxLines="2"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@id/close_imageV_id"
            app:layout_constraintStart_toEndOf="@id/deliver_imageV_id"
            app:layout_constraintTop_toTopOf="@id/deliver_imageV_id" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/select"
            app:layout_constraintTop_toBottomOf="@+id/deliver_phone_txtV_id"
            app:layout_constraintStart_toStartOf="@id/deliver_name_txtV_id"
            android:layout_marginTop="5dp"
            android:id="@+id/select_deliver_btn_id"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/colorPrimary"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
