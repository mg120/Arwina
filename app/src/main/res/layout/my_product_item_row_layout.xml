<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="7dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/myProduct_item_imageV_id"
            android:layout_width="105dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/myProduct_edit_imageV_id"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/edit"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/myProduct_delete_imageV_id"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/delet"
            app:layout_constraintEnd_toStartOf="@id/myProduct_edit_imageV_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/myProduct_name_txtV_is"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="2"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@id/myProduct_delete_imageV_id"
            app:layout_constraintStart_toEndOf="@id/myProduct_item_imageV_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/myProduct_price_txtV_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="@id/myProduct_name_txtV_is"
            app:layout_constraintTop_toBottomOf="@id/myProduct_name_txtV_is" />

        <TextView
            android:id="@+id/price_currency_txtV_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/ryal_saudi"
            android:maxLines="1"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/myProduct_price_txtV_id"
            app:layout_constraintTop_toTopOf="@id/myProduct_price_txtV_id" />

        <TextView
            android:id="@+id/myProduct_quantity_txtV_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="@id/myProduct_name_txtV_is"
            app:layout_constraintTop_toBottomOf="@id/myProduct_price_txtV_id" />

        <TextView
            android:id="@+id/quantity_txtV_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/packag"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/myProduct_quantity_txtV_id"
            app:layout_constraintTop_toTopOf="@id/myProduct_quantity_txtV_id" />

        <ProgressBar
            android:id="@+id/myProduct_image_progress_id"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="@dimen/activity_margin"
            android:layout_height="@dimen/activity_margin"
            android:theme="@style/CircularProgress"
            app:layout_constraintBottom_toBottomOf="@id/myProduct_item_imageV_id"
            app:layout_constraintEnd_toEndOf="@id/myProduct_item_imageV_id"
            app:layout_constraintStart_toStartOf="@id/myProduct_item_imageV_id"
            app:layout_constraintTop_toTopOf="@id/myProduct_item_imageV_id" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>